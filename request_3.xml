<!-- Tech tries to edit an Imaging resource from their phone -->
<Request xmlns="xacmldemo:1.0:context:schema"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">  
  <Subject>  
     <Attribute AttributeId="user_id" DataType="http://www.w3.org/2001/XMLSchema#string">
       <AttributeValue>2</AttributeValue>
     </Attribute>

     <Attribute AttributeId="device_type" DataType="http://www.w3.org/2001/XMLSchema#string">  
       <AttributeValue>phone</AttributeValue>  
     </Attribute>  

     <Attribute AttributeId="ip_address" DataType="http://www.w3.org/2001/XMLSchema#string">  
       <AttributeValue>local</AttributeValue>  
     </Attribute>  

     <Attribute AttributeId="access_time" DataType="http://www.w3.org/2001/XMLSchema#datetime">
       <AttributeValue>15:00:00</AttributeValue>
     </Attribute>  
  </Subject>  

  <Resource>  
     <Attribute AttributeId="resource" DataType="http://www.w3.org/2001/XMLSchema#string">  
       <AttributeValue>imaging</AttributeValue>  
     </Attribute>  
  </Resource>  

  <Action>  
     <Attribute AttributeId="action_type" DataType="http://www.w3.org/2001/XMLSchema#string">  
     <AttributeValue>edit</AttributeValue>  
     </Attribute>  
  </Action>  

</Request> 